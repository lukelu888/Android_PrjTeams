    <EditText
        android:id="@+id/edProjectTotalStory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:ems="3"
        android:inputType="number"
        android:textAlignment="viewStart"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvProjectTitle"
        app:layout_constraintStart_toEndOf="@+id/tvProjectTotalStory" />

    <TextView
        android:id="@+id/tvProjectTotalStory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Total Stories:"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#03A9F4"
        android:textSize="14sp"
        android:textStyle="bold"
